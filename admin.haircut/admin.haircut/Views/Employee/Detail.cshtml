    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <form id="modal_update_employee">
            <div class="row">
                <div class="col-sm-8">
                    <div class="card">
                        <div class="card-header pb-0">
                            <h4 class="card-title mb-0">Thông tin cá nhân</h4>
                            <div class="card-options"><a class="card-options-collapse" href="#" data-bs-toggle="card-collapse"><i class="fe fe-chevron-up"></i></a><a class="card-options-remove" href="#" data-bs-toggle="card-remove"><i class="fe fe-x"></i></a></div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 d-none">
                                    <div class="mb-3">
                                        <input class="form-control" type="text" name="Id" value="@Model.Id" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Họ tên</label>
                                        <input class="form-control" type="text" placeholder="Họ tên" name="FullName" value="@Model.FullName" required />
                                    </div>
                                </div>
                                <div class="col-sm-6 col-md-3">
                                    <div class="mb-3">
                                        <label class="form-label">Giới tính</label>
                                        @await Component.InvokeAsync("GenderOption", new {gender = @Model.Gender})
                                    </div>
                                </div>
                                <div class="col-sm-6 col-md-3">
                                    <div class="mb-3">
                                        <label class="form-label">Ngày sinh</label>
                                        <input class="datepicker-here form-control digits"
                                               data-language="en" type="text"
                                               data-multiple-dates-separator=", "
                                               data-position="top right"
                                               value="@Model.Birthday.FormatDate()"
                                               name="Birthday"
                                               data-date-format="dd/mm/yyyy">
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="mb-3">
                                        <label class="form-label">Tên tài khoản</label>
                                        <input class="form-control" type="text" name="Username" value="@Model.Username.Trim()" disabled required>
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="mb-3">
                                        <label class="form-label">Địa chỉ</label>
                                        <input class="form-control" type="text" placeholder="Địa chỉ" name="Address" value="@Model.Address" required>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="mb-3">
                                        <label class="form-label">Số điện thoại</label>
                                        <input class="form-control" type="text" placeholder="Số điện thoại" name="Phone" value="@Model.Phone" required>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Vị trí</label>
                                        @await Component.InvokeAsync("PositionOption", new {id = @Model.Id})
                                    </div>
                                </div>
                                <div class="col-sm-6 col-md-3">
                                    <div class="mb-3">
                                        <label class="form-label">Ngày bắt đầu</label>
                                        <input class="datepicker-here form-control digits"
                                               data-language="en" type="text"
                                               data-multiple-dates-separator=", "
                                               data-position="top right"
                                               data-date-format="dd/mm/yyyy"
                                               name="StartingDate"
                                               value="@Model.StartingDate.FormatDate()"
                                               required>
                                    </div>
                                </div>
                                <div class="col-sm-6 col-md-3">
                                    <div class="mb-3">
                                        <label class="form-label">Ngày kết thúc</label>
                                        <input class="datepicker-here form-control digits"
                                               data-language="en" type="text"
                                               data-multiple-dates-separator=", "
                                               data-position="top right"
                                               name="EndingDate"
                                               value="@Model.EndingDate.FormatDate()"
                                               data-date-format="dd/mm/yyyy">
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div>
                                        <label class="form-label">Ghi chú</label>
                                        <textarea class="form-control" rows="5" placeholder="Ghi chú" name="Note">@Model.Note</textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer text-end">
                            <button class="btn btn-primary" type="submit" id="@Model.Id">Lưu</button>
                            <button class="btn btn-danger" type="reset">Hủy bỏ</button>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
