</div>


@section Scripts
{
    <script src="~/custom/js/moment.min.js"></script>
    <script src="~/assets/js/select2/select2.full.min.js"></script>
    <script src="~/assets/js/datepicker/date-picker/datepicker.js"></script>
    <script src="~/assets/js/datepicker/date-picker/datepicker.en.js"></script>
    <script src="~/assets/js/datepicker/date-picker/datepicker.custom.js"></script>
    
    <script>
        $(function() {
            const form1 = $('#modal_update_employee');

            Array.prototype.filter.call(form1, function(form) {
                form.addEventListener('submit', function(event) {
                    event.preventDefault();
                    form.classList.add('was-validated');
                    var result = form.querySelectorAll(':valid');
                    for (var item of result) {
                        var msg = $(item).data("msg-required-1");
                        $(item).next("label").removeAttr("class").addClass("valid-feedback").html(msg);
                    }

                    if (form.checkValidity() === true) {
                        var formData = new FormData();

                        var otherData = $(form).serializeArray();
                        $.each(otherData || [],
                            function(key, item) {
                                formData.append(item.name, item.value);
                            });

                        var object = {};

                        formData.forEach((value, key) => { 
                            if (key == "Id") {
                                object[key] = parseInt(value);
                            }
                            else if (key == "Birthday" || key == "StartingDate" || key == "EndingDate") {
                                var timezone = ((new Date().getTimezoneOffset()) / 60) * -1;
                                object[key] = moment(value, "DD/MM/YYYY").add(timezone, 'hour');
                            }
                            else {
                                object[key] = value
                            }
                        });

                        object["IdRule"] = $(form).find(".select2-rule-multiple").select2("val");

                        $.ajax({
                            url: '@Url.Action("Update", "EmployeeApi")',
                            type: "PUT",
                            data: JSON.stringify(object),
                            contentType: 'application/json',
                            success: function(response) {
                                window.location.reload();
                            },
                            error: function(response) {
                                alert(response.responseJSON.message);
                            }
                        });
                    } else {
                        var list = form.querySelectorAll(':invalid');
                        for (var item of list) {
                            var msg = $(item).data("msg-required");
                            $(item).next("label").removeAttr("class").addClass("invalid-feedback").html(msg);
                        }
                    }
                }, false);
            });
        });
    </script>
}

